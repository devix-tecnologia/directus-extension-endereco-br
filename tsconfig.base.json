{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"checkJs": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"types": ["jest", "node"],
		"isolatedModules": true
	},
	"include": ["src/**/*"]
}
