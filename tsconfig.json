{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/tests/**/*"]
}
