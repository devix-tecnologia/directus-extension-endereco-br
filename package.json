{
	"name": "directus-extension-endereco-br",
	"description": "Extensão do Directus para trabalhar com endereços do Brasil",
	"icon": "extension",
	"version": "1.0.0",
	"license": "MIT",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-bundle"
	],
	"type": "module",
	"directus:extension": {
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "endpoint",
				"name": "pesquisa-cep",
				"source": "src/pesquisa-cep-endpoint/index.ts"
			},
			{
				"type": "hook",
				"name": "endereco_br_hook",
				"source": "src/endereco_br_hook/index.ts"
			},
			{
				"type": "hook",
				"name": "db-configuration-hook",
				"source": "src/db-configuration-hook/index.ts"
			}
		],
		"host": "^10.3.4"
	},
    "scripts": {
    "build": "pnpm run clean && pnpm run build:esm",
    "build:esm": "tsc -p ./tsconfig.esm.json && [ -f dist/esm/index.js ] && mv dist/esm/index.js dist/esm/index.mjs || true",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link",
    "add": "directus-extension add",
    "validate": "directus-extension validate",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest --reporter=verbose",
    "test:single": "vitest run --reporter=verbose",
    "clean": "rm -rf ./dist",
    "prepack": "pnpm run build",
    "semantic-release": "semantic-release",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "typecheck": "tsc --noEmit -p ./tsconfig.esm.json"
  }
,
	"devDependencies": {
		"@directus/extensions-sdk": "^13.1.1",
		"@directus/tsconfig": "^3.0.0",
		"@directus/types": "^13.2.3",
		"@types/node": "^22.18.12",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-vue": "^10.5.1",
		"prettier": "^3.6.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4",
		"vue-eslint-parser": "^10.2.0"
	},
	"dependencies": {
		"@directus/api": "^29.1.1",
		"@directus/errors": "^2.0.4",
		"@directus/extensions": "^3.0.11",
		"axios": "^1.12.2",
		"node-fetch": "^3.3.2",
		"vue": "^3.5.22"
	},
	"files": [
		"dist/",
		"package.json"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"printWidth": 100,
		"semi": true,
		"tabWidth": 2
	},
	"lint-staged": {
		"*.{ts,vue}": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
