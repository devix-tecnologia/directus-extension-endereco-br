{
	"name": "directus-extension-endereco-br",
	"description": "Extensão do Directus para trabalhar com endereços do Brasil",
	"icon": "extension",
	"version": "1.0.0",
	"license": "MIT",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-bundle"
	],
	"type": "module",
	"directus:extension": {
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "endpoint",
				"name": "pesquisa-cep",
				"source": "src/pesquisa-cep-endpoint/index.ts"
			},
			{
				"type": "hook",
				"name": "endereco_br_hook",
				"source": "src/endereco_br_hook/index.ts"
			},
			{
				"type": "hook",
				"name": "db-configuration-hook",
				"source": "src/db-configuration-hook/index.ts"
			}
		],
		"host": "^10.3.4"
	},
	"scripts": {
		"build": "directus-extension build && tsup src/services/ src/utils/ --format esm --dts",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"add": "directus-extension add",
		"postbuild": "cp ./files/* ./dist/",
		"predev": "cp ./files/* ./dist/",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.{ts,vue}\"",
		"lint:fix": "eslint \"src/**/*.{ts,vue}\" --fix",
		"format": "prettier --write src/"
	},
	"devDependencies": {
		"@directus/api": "^27.1.0",
		"@directus/extensions-sdk": "^13.1.1",
		"@directus/tsconfig": "^3.0.0",
		"@directus/types": "^13.1.2",
		"@types/node": "^22.15.29",
		"@typescript-eslint/eslint-plugin": "^8.33.1",
		"@typescript-eslint/parser": "^8.33.1",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-vue": "^10.1.0",
		"prettier": "^3.5.3",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vue-eslint-parser": "^10.1.3"
	},
	"dependencies": {
		"@directus/errors": "^2.0.1",
		"@directus/extensions": "^3.0.6",
		"axios": "^1.9.0"
	},
	"files": [
		"dist/",
		"package.json"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"printWidth": 100,
		"semi": true,
		"tabWidth": 2
	},
	"lint-staged": {
		"*.{ts,vue}": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
